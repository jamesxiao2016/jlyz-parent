    <result column="code" jdbcType="VARCHAR" property="code" />
  </resultMap>

  <select id="existWithCode" resultType="boolean">
    select count(*) from dj_building
    <where>
      code = #{code}
      <if test="id != null">
        and id != #{id}
      </if>
    </where>

  </select>

  <select id="existWithName" resultType="boolean">
    select count(*) from dj_building
    <where>
      name = #{name}
      <if test="id != null">
        and id != #{id}
      </if>
    </where>
  </select>
</mapper>