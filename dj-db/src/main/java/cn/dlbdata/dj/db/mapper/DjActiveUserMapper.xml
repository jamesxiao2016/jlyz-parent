  <select id="getMyJoinActive" parameterType="map" resultMap="BaseResultMapTwo">
  	SELECT
  		t.name, t.dj_type_id, t.dj_sub_type_id, t.address, t.principal_name, t.has_audit, t.start_time, t.end_time, t.content, t.create_user_id, t.dj_pic_id, t.create_time,
